toolbar-height = 28px

header
	position absolute
	z-index 99
	height toolbar-height
	top 0
	left 0
	right 0
	padding 0
	text-align right
	white-space nowrap


.main-header-inner
	height (toolbar-height - 1px)
	padding 0
	background-color #f3f3f3
	display flex
	position absolute
	width 100%
	z-index 100


.main-header-border
	position absolute
	bottom 0
	width 100%
	border-bottom 1px solid #c2c0c2
	z-index 99


.header-btn
	font-size 22px
	color #888
	transition color .3s
	margin 0
	cursor pointer
	padding 2px 10px
	text-align center

	&:hover
		color #4078c0

	&:active
		color black



.side-header .header-btn
	color #eee

	&:hover
		color lightblue

	&:active
		color white



header
	.disabled
		pointer-events none
		opacity 0.3


	.js-stop
		display none


	.js-refresh
	.js-stop
		width 35px



	&.loading
		.js-sync
			opacity 1

		.js-refresh
			display none

		.js-stop
			display block


	&.error
		.js-sync
			display none

		.js-error
			display block
