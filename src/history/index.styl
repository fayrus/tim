@require '_lib'

#history
	position absolute
	left (navbar-width + subnavbar-width)
	top (header-height + addressbar-height)
	right 0
	background-color #fff
	box-shadow 0 5px 5px rgba(0, 0, 0, 0.4)
	text-align center
	z-index 9

.history
	height 200px
	display none
	opacity 0

	&.visible
		display block

.history-list
	width 100%
	height 100%
	padding 10px 0
	border none
	font inherit

	&:focus
		outline none

	option
		padding 5px 0 5px 117px
