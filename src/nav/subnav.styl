@require '_lib'

#subnav
	position absolute
	width subnavbar-width
	left navbar-width
	bottom 0
	color #eee
	user-select none
	box-shadow 1px 0 0 rgba(255,255,255, .1) inset
	top 0
	background rgba(#2C384D, 0.3)


.subnav-section
	position absolute
	top 0
	bottom 0
	right 0
	left 0
	display none


.subnav-section.active
	display block


.subnav-section a
	color inherit
	text-decoration none


.subnav-section a:hover
	text-decoration underline



.subnav-section h1
	font-size 14px
	font-weight 300
	line-height 12px
	margin 0
	color #eee
	background transparent
	padding 13px 0 0
	height 38px
	text-transform uppercase
	text-align center
	-webkit-app-region drag


.subnav-section h2
	font-size 14px
	line-height 17px
	font-weight 600
	margin 0




.subnav-section .nav-icon-btn
	position absolute
	right 5px
	top 0
	color #eee


.subnav-section .nav-icon-btn:hover
	color lightblue


.subnav-section .nav-icon-btn:active
	color white



.subnav-section .nav-icon-btn-left
	left 5px
	right auto



.subnav-section-list
	position absolute
	top 44px
	left 0
	right 0
	bottom 0
	overflow hidden
	overflow-y auto

