@require '_lib'


#toolbar
	position absolute
	top header-height
	left (navbar-width + subnavbar-width)
	right 0
	height toolbar-height
	display flex
	border-bottom 1px solid #c2c0c2
	background-color #f3f3f3


	button
		font-size 22px
		line-height 1
		transition color .3s
		margin 0
		padding 2px 10px
		cursor pointer
		text-align center
		background none
		border none
		color #888
		transition color .2s ease-out

		&:hover
			color #4078c0

		&:active
			color black

	input[type="number"]::-webkit-outer-spin-button
	input[type="number"]::-webkit-inner-spin-button
		-webkit-appearance none
		margin 0



.addressbar-wrapper
	flex 1
	display flex
	position relative
	background-color #f3f3f3


	.loader
	.error
		position absolute
		z-index 2
		right 10px
		top 0
		font-size 22px
		transition opacity .3s ease-out

	.loader
		opacity 0
		color #888
		width 22px
		height 22px
		top 2px
		box-shadow inset 0 0 0 2px
		transform translateZ(0)


	.error
	.error:hover
		color red
		display none





	&.loading
	&.error
		.addressbar
			padding-right 40px



	&.loading
		.loader
			opacity 1

		.btn-refresh
			display none

		.btn-stop
			display block


	&.error
		.loader
			display none

		.error
			display block



.loader
	&
	&:before
	&:after
		border-radius 50%
		background-color inherit
		width 12px
		height 24px
		position absolute
		content ''
		top -1px

	&:before
		left -1px
		transform-origin 12px 12px
		border-radius 24px 0 0 24px
		animation spin 2s infinite ease 1.5s

	&:after
		left 11px
		transform-origin 0 12px
		border-radius 0 24px 24px 0
		animation spin 2s infinite ease



.addressbar
.issueidbox
	padding 0 10px
	margin 0 0 0 5px
	height 100%
	font-size 14px
	border 1px solid #ccc
	border-width 0 1px
	background-color transparent
	color #666
	transition background-color .3s ease-out, color .3s ease-out


	&:focus
		outline none
		background-color #fff
		color #222


.issueidbox
	width 100px
	margin-left 0
	border-left 0
	text-align center
	border-right 0



@keyframes spin
	0%
		transform rotate(0)
	100%
		transform rotate(360deg)


